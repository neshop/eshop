# WARNING: it is CRITICAL that this file & directory are NOT accessible directly via a web browser!
# https://nette.org/security-warning

php:
    date.timezone: Europe/Prague


application:
    errorPresenter: Error
    mapping:
        *: App\*Module\Presenters\*Presenter

session:
    expiration: 14 days

extensions:
    console: Kdyby\Console\DI\ConsoleExtension
    events: Kdyby\Events\DI\EventsExtension
    annotations: Kdyby\Annotations\DI\AnnotationsExtension
    doctrine: Kdyby\Doctrine\DI\OrmExtension
    gedmo: Rixxi\Gedmo\DI\OrmExtension
    doctrine2identity: Majkl578\NetteAddons\Doctrine2Identity\DI\IdentityExtension

gedmo:
    treeable: on

doctrine:
    types:
        bit: Doctrine\DBAL\Types\BooleanType

    filters:
        soft-deleteable: Gedmo\SoftDeleteable\Filter\SoftDeleteableFilter

services:
    router: App\RouterFactory::createRouter

    - App\Model\Users\Authenticator
    - App\Model\Users\UserRepository

    - App\Model\Eshop\CartSessionStorage
    - App\Model\Eshop\Cart

    - Nextras\Forms\Rendering\Bs3FormRenderer

    - Analytics\Components\GoogleAnalytics(
            %debugMode%,
            %analytics.googleAnalytics.site%,
            %analytics.googleAnalytics.key%
        )

    - App\Components\BaseForm
    - App\Components\RegistrationFormFactory
    - App\Components\LoginFormFactory
    - App\Components\ChangePasswordFormFactory
    - App\Components\LostPasswordFormFactory
    - App\Components\ProductFormFactory
    - App\Components\BuyFormFactory
    - App\Components\CategoryTreeFactory
    - App\Components\CartInfoFactory
    - App\Components\CartFactory

    - App\Model\LostPasswordResetMessageSender
    - App\Model\MessageSenderSettings('simple-shop', 'info@hc4l.cz', '')

    -
        class: App\Model\Fixtures\DefaultData
        tags: [kdyby.console.command]
